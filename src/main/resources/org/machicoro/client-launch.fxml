<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.machicoro.WindowClientController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <Label fx:id="clientText"/>
    <HBox xmlns="http://javafx.com/javafx/15.0.1" xmlns:fx="http://javafx.com/fxml/1">
        <Label text="Player name: " />
        <TextField fx:id="nameField" promptText="Enter player name" HBox.hgrow="ALWAYS"/>
    </HBox>
    <HBox xmlns="http://javafx.com/javafx/15.0.1" xmlns:fx="http://javafx.com/fxml/1">
        <Label text="Host IP: " />
        <TextField fx:id="ipField" promptText="Enter host ip" HBox.hgrow="ALWAYS"/>
    </HBox>
    <Button text="Connect to server" onAction="#getName"/>
    <Button text="Exit" onAction="#onExitButtonClick"/>
</VBox>
